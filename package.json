{
  "name": "chaser-design-system-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "A modern, type-safe React component library built with Vanilla Extract",
  "repository": {
    "type": "git",
    "url": "https://github.com/jordan-mace/chaser-design-system"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "dev": "lerna run dev --parallel",
    "test": "lerna run test",
    "lint": "lerna run lint",
    "format": "lerna run format",
    "clean": "lerna run clean && lerna clean --yes",
    "storybook": "lerna run storybook --scope=chaser-design-system",
    "build-storybook": "lerna run build-storybook --scope=chaser-design-system",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "lerna run build && changeset publish"
  },
  "devDependencies": {
    "lerna": "^8.1.8",
    "@changesets/cli": "^2.27.7"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
